<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.nbp.editor"
  android:versionCode="@integer/NBP_Editor_version_code"
  android:versionName="@string/NBP_Editor_version_name"
  >

  <application
    android:label="@string/app_name"
    android:icon="@drawable/editor"
    >

    <activity
      android:name="EditorActivity"
      android:label="@string/app_name"
      >

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <action android:name="android.intent.action.EDIT" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <data android:scheme="file" android:host="" android:pathPattern=".*.brf" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.brl" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.doc" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.docm" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.docx" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.htm" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.html" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.mht" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.mhtml" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.odt" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.rtf" />
        <data android:scheme="file" android:host="" android:pathPattern=".*.txt" />
      </intent-filter>
    </activity>

    <activity
      android:name=".FileFinderActivity"
      android:label="@string/FileFinder_title_main"
      android:exported="true"
      >

      <intent-filter>
        <action android:name="android.intent.action.GET_CONTENT" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.OPENABLE" />

        <data android:mimeType="file/*" />
      </intent-filter>
    </activity>
  </application>
</manifest>
