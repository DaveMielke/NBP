<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/keypad_numeric"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  >

  <Button
    android:layout_row="0"
    android:layout_column="0"
    android:text="7"
   />

  <Button
    android:layout_row="0"
    android:layout_column="1"
    android:text="8"
   />

  <Button
    android:layout_row="0"
    android:layout_column="2"
    android:text="9"
   />

  <Button
    android:layout_row="0"
    android:layout_column="3"
    android:text="÷"
   />

  <Button
    android:layout_row="0"
    android:layout_column="4"
    android:text="^"
   />

  <Button
    android:layout_row="1"
    android:layout_column="0"
    android:text="4"
   />

  <Button
    android:layout_row="1"
    android:layout_column="1"
    android:text="5"
   />

  <Button
    android:layout_row="1"
    android:layout_column="2"
    android:text="6"
   />

  <Button
    android:layout_row="1"
    android:layout_column="3"
    android:text="×"
   />

  <Button
    android:layout_row="1"
    android:layout_column="4"
    android:text="("
   />

  <Button
    android:layout_row="2"
    android:layout_column="0"
    android:text="1"
   />

  <Button
    android:layout_row="2"
    android:layout_column="1"
    android:text="2"
   />

  <Button
    android:layout_row="2"
    android:layout_column="2"
    android:text="3"
   />

  <Button
    android:layout_row="2"
    android:layout_column="3"
    android:text="−"
   />

  <Button
    android:layout_row="2"
    android:layout_column="4"
    android:text=")"
   />

  <Button
    android:layout_row="3"
    android:layout_column="0"
    android:text="0"
   />

  <Button
    android:layout_row="3"
    android:layout_column="1"
    android:text="."
   />

  <Button
    android:layout_row="3"
    android:layout_column="2"
    android:text="="
   />

  <Button
    android:layout_row="3"
    android:layout_column="3"
    android:text="+"
   />

  <Button
    android:layout_row="3"
    android:layout_column="4"
    android:text="$"
   />
</GridLayout>
