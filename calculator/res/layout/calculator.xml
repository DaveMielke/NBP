<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <Button
      android:id="@+id/button_clear"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:text="@string/button_clear"
     />
  </LinearLayout>

  <EditText
    android:id="@+id/expression"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:hint="@string/hint_expression"
   />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:text="@string/label_result"
     />

    <TextView
      android:id="@+id/result"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:focusable="true"
      android:singleLine="true"
     />
  </LinearLayout>

  <GridLayout
    android:id="@+id/keys"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <Button
      android:layout_row="0"
      android:layout_column="0"
      android:text="deg2rad()"
     />

    <Button
      android:layout_row="0"
      android:layout_column="1"
      android:text="sin()"
     />

    <Button
      android:layout_row="0"
      android:layout_column="2"
      android:text="cos()"
     />

    <Button
      android:layout_row="0"
      android:layout_column="3"
      android:text="tan()"
     />

    <Button
      android:layout_row="0"
      android:layout_column="4"
      android:text="sqrt()"
     />

    <Button
      android:layout_row="1"
      android:layout_column="0"
      android:text="rad2deg()"
     />

    <Button
      android:layout_row="1"
      android:layout_column="1"
      android:text="asin()"
     />

    <Button
      android:layout_row="1"
      android:layout_column="2"
      android:text="acos()"
     />

    <Button
      android:layout_row="1"
      android:layout_column="3"
      android:text="atan()"
     />

    <Button
      android:layout_row="1"
      android:layout_column="4"
      android:text="cbrt()"
     />

    <Button
      android:layout_row="2"
      android:layout_column="0"
      android:text="pi()"
     />

    <Button
      android:layout_row="2"
      android:layout_column="1"
      android:text="sinh()"
     />

    <Button
      android:layout_row="2"
      android:layout_column="2"
      android:text="cosh()"
     />

    <Button
      android:layout_row="2"
      android:layout_column="3"
      android:text="tanh()"
     />

    <Button
      android:layout_row="2"
      android:layout_column="4"
      android:text="round()"
     />

    <Button
      android:layout_row="3"
      android:layout_column="0"
      android:text="e"
     />

    <Button
      android:layout_row="3"
      android:layout_column="1"
      android:text="exp()"
     />

    <Button
      android:layout_row="3"
      android:layout_column="2"
      android:text="log()"
     />

    <Button
      android:layout_row="3"
      android:layout_column="3"
      android:text="log10()"
     />

    <Button
      android:layout_row="3"
      android:layout_column="4"
      android:text="abs()"
     />

    <Button
      android:layout_row="4"
      android:layout_column="0"
      android:text="7"
     />

    <Button
      android:layout_row="4"
      android:layout_column="1"
      android:text="8"
     />

    <Button
      android:layout_row="4"
      android:layout_column="2"
      android:text="9"
     />

    <Button
      android:layout_row="4"
      android:layout_column="3"
      android:text="/"
     />

    <Button
      android:layout_row="4"
      android:layout_column="4"
      android:text="^"
     />

    <Button
      android:layout_row="5"
      android:layout_column="0"
      android:text="4"
     />

    <Button
      android:layout_row="5"
      android:layout_column="1"
      android:text="5"
     />

    <Button
      android:layout_row="5"
      android:layout_column="2"
      android:text="6"
     />

    <Button
      android:layout_row="5"
      android:layout_column="3"
      android:text="*"
     />

    <Button
      android:layout_row="5"
      android:layout_column="4"
      android:text="("
     />

    <Button
      android:layout_row="6"
      android:layout_column="0"
      android:text="1"
     />

    <Button
      android:layout_row="6"
      android:layout_column="1"
      android:text="2"
     />

    <Button
      android:layout_row="6"
      android:layout_column="2"
      android:text="3"
     />

    <Button
      android:layout_row="6"
      android:layout_column="3"
      android:text="-"
     />

    <Button
      android:layout_row="6"
      android:layout_column="4"
      android:text=")"
     />

    <Button
      android:layout_row="7"
      android:layout_column="0"
      android:text="."
     />

    <Button
      android:layout_row="7"
      android:layout_column="1"
      android:text="0"
     />

    <Button
      android:layout_row="7"
      android:layout_column="2"
      android:text="="
     />

    <Button
      android:layout_row="7"
      android:layout_column="3"
      android:text="+"
     />

    <Button
      android:layout_row="7"
      android:layout_column="4"
      android:text="\?"
     />
  </GridLayout>
</LinearLayout>
