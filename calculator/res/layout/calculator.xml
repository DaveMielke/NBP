<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/expression_area" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android">
      <TableRow android:weightSum="5">
        <include layout="@layout/control_clear" />
        <include layout="@layout/control_alternate_keypad" />
        <include layout="@layout/control_calculator_mode" />
        <include layout="@layout/control_complex_notation" />
        <include layout="@layout/control_angle_unit" />
      </TableRow>
    </TableLayout>

    <TableRow>
      <include layout="@layout/memory_buttons" />
      <include layout="@layout/navigation_buttons" />
    </TableRow>

    <include layout="@layout/keypads" />
  </TableLayout>
</FrameLayout>
