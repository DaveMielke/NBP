<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:text="@string/label_result"
     />

    <TextView
      android:id="@+id/result"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:focusable="true"
      android:singleLine="true"
      android:hint="@string/hint_result"
     />
  </LinearLayout>

  <EditText
    android:id="@+id/expression"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:hint="@string/hint_expression"
   />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <include layout="@layout/buttons_control" />
    <include layout="@layout/keypad_numeric" />
    <include layout="@layout/keypad_function" />
    <include layout="@layout/buttons_memory" />
  </LinearLayout>
</LinearLayout>
