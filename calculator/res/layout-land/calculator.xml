<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/expression_area" />

    <TableRow>
      <TableLayout>
        <TableRow>
          <TableLayout android:layout_span="2">
            <TableRow>
              <include layout="@layout/control_clear" />
              <include layout="@layout/control_calculator_mode" />
              <include layout="@layout/control_alternate_keypad" />
            </TableRow>
          </TableLayout>
        </TableRow>

        <TableRow>
          <TableLayout>
            <include layout="@layout/control_complex_notation" />
            <include layout="@layout/control_angle_unit" />
          </TableLayout>

          <include layout="@layout/memory_buttons" />
        </TableRow>

        <TableRow>
          <include
            layout="@layout/navigation_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
           />
        </TableRow>
      </TableLayout>

      <include layout="@layout/keypads" />
    </TableRow>
  </TableLayout>
</FrameLayout>
