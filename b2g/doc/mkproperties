#!/bin/sh
set -e

. ../application.sh
. ../../properties.sh

writeProperty() {
  local name="${1}"
  local value="${2}"

  echo ".. |${name}| replace:: ${value}"
}

writeProperty "package version" "${versionNumber}"
writeProperty "source revision" "${sourceRevision}"
writeProperty "build time" "${buildDate} ${buildTime} ${buildZone}"

exit 0
